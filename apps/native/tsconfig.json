{
  "extends": ["expo/tsconfig.base"],
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@common/*": ["./components/ui/common/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@hooks/*": ["./hooks/*"],
      "@constants/*": ["./constants/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "app/index.tsx", "index.ts"]
}
