{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "testMatch": ["**/*.e2e-spec.ts"],
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", { "tsconfig": "tsconfig.json" }]
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}
